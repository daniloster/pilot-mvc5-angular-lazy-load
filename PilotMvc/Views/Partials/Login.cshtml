<form name="userForm" ng-controller="userCtrl">
    <h2>{{ titleRegister }}</h2>
    <label>User Name:</label><input type="text" ng-model="user.userName" required />
    <label>Password:</label><input type="text" ng-model="user.password" required />
    <br />
    <br />
    <input type="submit" value="Add" ng-click="login()" ng-disabled="!userForm.$valid" class="btn btn-primary" />
    <br />
    <br />
    <p>{{ message }}</p>
</form>