<!DOCTYPE html>
<!--[if lt IE 7 ]><html class="ie ie6" lang="en" xmlns:ng="http://angularjs.org"> <![endif]-->
<!--[if IE 7 ]><html class="ie ie7" lang="en" xmlns:ng="http://angularjs.org"> <![endif]-->
<!--[if IE 8 ]><html class="ie ie8" lang="en" xmlns:ng="http://angularjs.org"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--><html lang="en" xmlns:ng="http://angularjs.org"> <!--<![endif]-->
<head>
    <!-- Basic Page Needs
    ================================================== -->
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    	<!-- Mobile Specific Metas
  ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Favicons
    ================================================== -->
    <link rel="shortcut icon" href="/Content/Images/sk-favicon.ico">
    <link rel="apple-touch-icon" href="/Content/Images/sk-apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/Content/Images/sk-apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/Content/Images/sk-apple-touch-icon-114x114.png">

    <!-- CSS
    ================================================== -->
    @Styles.Render("~/bundles/skeleton")
    
    @RenderSection("ExtraStyle", false)

    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    
    @RenderSection("ExtraScript", false)
</head>
<body>
    <!--[if lt IE 7]>
        <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <!-- Primary Page Layout
	================================================== -->
    <div class="container" data-role="page">
	    <!-- Delete everything in this .container and get started on your own site! -->
        <div class="sixteen columns">
            <header class="wrapper clearfix">
                <h1 class="remove-bottom" style="margin-top: 40px">@ViewBag.Title</h1>
            </header>
            @Html.Partial("~/Views/SkeletonNavMenu.cshtml")
        </div>

        <!-- container -->
        <div ng-view>
        @RenderBody()
        </div>
        <!-- container -->

        <div class="sixteen columns">
            <footer class="wrapper">
                <h3>footer</h3>
            </footer>
        </div>
    </div>
<!-- End Document
================================================== -->
    <script>
        var require = {
            //By default load any module IDs from js/lib
            baseUrl: '/Content/Scripts',
            enforceDefine: true,
            paths: {
                'domReady': 'lib/domReady',
                'modernizr': 'lib/modernizr.min',
                //'text': 'lib/requirejs.text.min',
                'jquery': ['https://code.jquery.com/jquery-2.1.1.min', 'lib/jQuery/jquery-2.min'],
                'angular': ['//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular.min', 'lib/angularjs/angular.min'],
                'ngRoute': ['//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular-route.min', 'lib/angularjs/angular-route.min'],
                'ngResource': ['//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular-resource.min', 'lib/angularjs/angular-resource.min'],
                'ngMocks': ['//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular-mocks', 'lib/angularjs/angular-mocks'],
                'ngCookies': ['//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular-cookies.min', 'lib/angularjs/angular-cookies.min'],
                'ngAnimate': ['//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular-animate.min', 'lib/angularjs/angular-animate.min'],
                'ngSanitize': ['//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular-sanitize.min', 'lib/angularjs/angular-sanitize.min']
            },
            shim: {
                jquery: {
                    exports: 'jQuery'
                },
                modernizr: {
                    exports: 'Modernizr'
                },
                'angular': {
                    exports: 'angular'
                },
                'ngRoute': {
                    exports: 'angular',
                    deps: ['angular']
                },
                'ngResource': {
                    exports: 'angular',
                    deps: ['angular']
                },
                'ngMocks': {
                    exports: 'angular.mock',
                    deps: ['angular']
                },
                'ngCookies': {
                    exports: 'angular',
                    deps: ['angular']
                },
                'ngAnimate': {
                    exports: 'angular',
                    deps: ['angular']
                },
                'ngSanitize': {
                    exports: 'angular',
                    deps: ['angular']
                }
            },
            priority: [
                "angular", "ngRoute", "ngResource", "ngMocks", "ngCookies", "ngAnimate", "ngSanitize"
            ],
            deps: [/*'jquery', */'ngRoute', 'ngResource', 'ngMocks', 'ngCookies', 'ngAnimate', 'ngSanitize'],
            js: {
                options: {
                    uglify2: {
                        mangle: false
                    },
                    /*baseUrl: "/Content/Scripts",
                    mainConfigFile: "public/js/main.js",
                    name: 'main',
                    out: "public/build/main.js",*/
                    optimize: 'uglify2'
                }
            }
        };
    </script>
    <script data-main="@RenderSection("MainScript", false)" src="~/Content/Scripts/lib/requirejs.min.js"></script>

    <!-- Google Analytics: change UA-XXXXX-X to be your site's ID. -->
    <script>
        (function (b, o, i, l, e, r) {
            b.GoogleAnalyticsObject = l; b[l] || (b[l] =
            function () { (b[l].q = b[l].q || []).push(arguments) }); b[l].l = +new Date;
            e = o.createElement(i); r = o.getElementsByTagName(i)[0];
            e.src = '//www.google-analytics.com/analytics.js';
            r.parentNode.insertBefore(e, r)
        }(window, document, 'script', 'ga'));
        ga('create', 'UA-XXXXX-X'); ga('send', 'pageview');
    </script>
</body>
</html>
